<div class="login-section section mt-90 mb-90">
    <div class="container">
        <div class="row">
            
            <!-- Login -->
            <div class="col-md-6 col-12 d-flex">
                <div class="ee-login">
                    
                    <h3>Ingrese a su cuenta</h3>
                    
                    <!-- Login Form -->
                    <form action="#">
                        <div class="row">
                            <div class="col-12 mb-30"><input type="text" placeholder="Escriba su nombre de usuario o correo electrónico"></div>
                            <div class="col-12 mb-20"><input type="password" placeholder="Ingresa tu contraseña"></div>
                            <div class="col-12 mb-15">
                                
                                <input type="checkbox" id="remember_me">
                                <label for="remember_me">Recuérdame</label>
                                
                                <a href="#">Olvidaste tu contraseña?</a>
                                
                            </div>
                            <div class="col-12"><input type="submit" value="INICIAR SESIÓN"></div>
                        </div>
                    </form>
                    <h4>¿No tienes cuenta? Por favor haz click <a href="/account">CREAR CUENTA</a></h4>
                    
                </div>
            </div>
            
            <div class="col-md-1 col-12 d-flex">
                
                <div class="login-reg-vertical-boder"></div>
                
            </div>
            
            <!-- Login With Social -->
            <div class="col-md-5 col-12 d-flex">
                
                <div class="ee-social-login">
                    <h3>También puedes iniciar sesión con ...</h3>
                    
                    <a href="#" class="facebook-login">Inicia con <i class="fa fa-facebook"></i></a>
                    <a href="#" class="twitter-login">Inicia con <i class="fa fa-twitter"></i></a>
                    <a href="#" class="google-plus-login">Inicia con <i class="fa fa-google-plus"></i></a>
                    
                </div>
                
            </div>
            
        </div>
    </div>
</div>

<div class="subscribe-section section bg-gray pt-55 pb-55">
    <div class="container">
        <div class="row align-items-center">
            
            <!-- Mailchimp Subscribe Content Start -->
            <div class="col-lg-6 col-12 mb-15 mt-15">
                <div class="subscribe-content">
                    <h2>SUSCRIBETE <span>A NUESTRO SITIO</span></h2>
                    <h2><span>PARA OBTENER ÚLTIMA</span>ACTUALIZACIÓN DEL PRODUCTO</h2>
                </div>
            </div><!-- Mailchimp Subscribe Content End -->
            
            
            <!-- Mailchimp Subscribe Form Start -->
            <div class="col-lg-6 col-12 mb-15 mt-15">
                
				<form id="mc-form" class="mc-form subscribe-form" novalidate="true">
					<input id="mc-email" type="email" autocomplete="off" placeholder="Introduzca su correo electrónico aquí" name="EMAIL">
					<button id="mc-submit">Suscribir</button>
				</form>
				<!-- mailchimp-alerts Start -->
				<div class="mailchimp-alerts text-centre">
					<div class="mailchimp-submitting"></div><!-- mailchimp-submitting end -->
					<div class="mailchimp-success"></div><!-- mailchimp-success end -->
					<div class="mailchimp-error"></div><!-- mailchimp-error end -->
				</div><!-- mailchimp-alerts end -->
                
            </div><!-- Mailchimp Subscribe Form End -->
            
        </div>
    </div>
</div>